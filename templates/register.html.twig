{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        {% form_theme form 'bootstrap_4_layout.html.twig' %}

        {{ form_start(form) }}
        {% if not form.vars.valid %}
            {{ form_errors(form.username) }}
            {{ form_errors(form.password.first) }}
        {% endif %}

        <br>
        <br>

        Prisijungimo vardas {{ form_widget(form.username) }}
        Slaptažodis {{ form_widget(form.password.first) }}
        Pakartotinis slaptažodis {{ form_widget(form.password.second) }}
        Rolė (1 - šeimos narys, 2 - kontrolierius, 3 - šeimos galva) {{ form_widget(form.role) }}
        <br>
        <button type="submit" class="btn btn-primary btn-raised"> Pridėti naują vartotoją </button>
        {{ form_end(form) }}
    </div>

{% endblock %}